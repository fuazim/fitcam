generator client {
  provider = "prisma-client"
  output   = "../app/lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  phone         String?
  password      String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  orders        Order[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model City {
  id           String   @id @default(cuid())
  name         String   @unique
  slug         String   @unique
  thumbnailUrl String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  gyms         Gym[]

  @@index([slug])
  @@map("cities")
}

model Gym {
  id                 String        @id @default(cuid())
  name               String
  slug               String        @unique
  locationText       String
  address            String?
  latitude           Float?
  longitude          Float?
  mainImageUrl       String?
  thumbnailUrl       String?
  isPopular          Boolean       @default(false)
  openingStartTime   String?
  openingEndTime     String?
  contactPersonName  String?
  contactPersonPhone String?
  cityId             String
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  facilities         GymFacility[]
  images             GymImage[]
  city               City          @relation(fields: [cityId], references: [id])
  orders             Order[]
  testimonials       Testimonial[]

  @@index([slug])
  @@index([cityId])
  @@map("gyms")
}

model GymImage {
  id        String   @id @default(cuid())
  gymId     String
  url       String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  gym       Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  @@index([gymId, sortOrder])
  @@map("gym_images")
}

model Facility {
  id          String        @id @default(cuid())
  name        String        @unique
  description String?
  iconUrl     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  gyms        GymFacility[]

  @@map("facilities")
}

model GymFacility {
  gymId      String
  facilityId String
  facility   Facility @relation(fields: [facilityId], references: [id], onDelete: Cascade)
  gym        Gym      @relation(fields: [gymId], references: [id], onDelete: Cascade)

  @@id([gymId, facilityId])
  @@index([gymId])
  @@index([facilityId])
  @@map("gym_facilities")
}

model SubscriptionPlan {
  id           String        @id @default(cuid())
  name         String
  description  String?
  priceCents   Int
  currency     String        @default("IDR")
  periodMonths Int
  isActive     Boolean       @default(true)
  sortOrder    Int           @default(0)
  imageUrl     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  orders       Order[]
  features     PlanFeature[]

  @@index([isActive, sortOrder])
  @@map("subscription_plans")
}

model PlanFeature {
  id        String           @id @default(cuid())
  planId    String
  text      String
  sortOrder Int              @default(0)
  createdAt DateTime         @default(now())
  plan      SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([planId, sortOrder])
  @@map("plan_features")
}

model PromoCode {
  id          String   @id @default(cuid())
  code        String   @unique
  description String?
  discountPercent Int  @default(0) // Percentage discount (0-100)
  discountCents    Int @default(0) // Fixed discount in cents
  minPurchaseCents Int @default(0) // Minimum purchase amount
  maxDiscountCents  Int? // Maximum discount amount (null = unlimited)
  usageLimit  Int?      // Maximum number of uses (null = unlimited)
  usedCount   Int       @default(0)
  isActive    Boolean   @default(true)
  validFrom   DateTime?
  validUntil  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]

  @@index([code])
  @@index([isActive])
  @@map("promo_codes")
}

model Order {
  id            String           @id @default(cuid())
  bookingCode   String           @unique
  userId        String?
  planId        String
  gymId         String?
  promoCodeId   String?
  status        OrderStatus      @default(PENDING)
  subtotalCents Int
  discountCents Int              @default(0)
  totalCents    Int
  paymentMethod PaymentMethod    @default(MANUAL)
  createdAt     DateTime         @default(now())
  paidAt        DateTime?
  updatedAt     DateTime         @updatedAt
  gym           Gym?             @relation(fields: [gymId], references: [id])
  plan          SubscriptionPlan @relation(fields: [planId], references: [id])
  user          User?            @relation(fields: [userId], references: [id])
  promoCode     PromoCode?       @relation(fields: [promoCodeId], references: [id])
  payment       Payment?
  ticket        Ticket?

  @@index([bookingCode])
  @@index([userId])
  @@index([status])
  @@map("orders")
}

model Payment {
  id           String        @id @default(cuid())
  orderId      String        @unique
  method       PaymentMethod
  status       PaymentStatus @default(WAITING_PROOF)
  gateway      String?
  gatewayTxnId String?
  amountCents  Int
  proofUrl     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  order        Order         @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([gatewayTxnId])
  @@index([status])
  @@map("payments")
}

model Ticket {
  id        String       @id @default(cuid())
  orderId   String       @unique
  startsAt  DateTime
  endsAt    DateTime
  status    TicketStatus @default(ACTIVE)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  order     Order        @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([status])
  @@map("tickets")
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String
  text      String
  imageUrl  String?
  gymId     String?
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  gym       Gym?     @relation(fields: [gymId], references: [id], onDelete: Cascade)

  @@index([isActive, sortOrder])
  @@index([gymId])
  @@map("testimonials")
}

enum UserRole {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
  EXPIRED
}

enum PaymentMethod {
  MANUAL
  MIDTRANS
  XENDIT
  STRIPE
}

enum PaymentStatus {
  WAITING_PROOF
  WAITING_GATEWAY
  SUCCESS
  FAILED
}

enum TicketStatus {
  ACTIVE
  INACTIVE
  EXPIRED
}
